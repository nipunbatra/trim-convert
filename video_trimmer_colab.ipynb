   "outputs": [],
   "source": [
    "def download_trimmed_files():\n",
    "    \"\"\"Download processed files to local machine\"\"\"\n",
    "    if not current_output_folder:\n",
    "        print(\"âŒ No output folder set. Please process a video first.\")\n",
    "        return\n",
    "    \n",
    "    output_dir = current_output_folder\n",
    "    \n",
    "    # Find processed files\n",
    "    video_files = glob.glob(os.path.join(output_dir, \"*_trimmed.mp4\"))\n",
    "    audio_files = glob.glob(os.path.join(output_dir, \"*_trimmed.aac\"))\n",
    "    \n",
    "    if not video_files and not audio_files:\n",
    "        print(\"âŒ No processed files found. Please trim a video first.\")\n",
    "        return\n",
    "    \n",
    "    print(\"ğŸ“¥ Downloading files to your computer...\")\n",
    "    \n",
    "    # Download video files\n",
    "    for video_file in video_files:\n",
    "        if os.path.exists(video_file):\n",
    "            print(f\"ğŸ“¹ Downloading: {os.path.basename(video_file)}\")\n",
    "            files.download(video_file)\n",
    "    \n",
    "    # Download audio files\n",
    "    for audio_file in audio_files:\n",
    "        if os.path.exists(audio_file):\n",
    "            print(f\"ğŸµ Downloading: {os.path.basename(audio_file)}\")\n",
    "            files.download(audio_file)\n",
    "    \n",
    "    print(\"âœ… Download complete!\")\n",
    "\n",
    "# Create download button\n",
    "download_button = widgets.Button(\n",
    "    description=\"ğŸ’¾ Download Files\",\n",
    "    button_style='info',\n",
    "    layout=widgets.Layout(width='200px', height='40px')\n",
    ")\n",
    "\n",
    "download_button.on_click(lambda b: download_trimmed_files())\n",
    "\n",
    "print(\"ğŸ’¾ Download your trimmed video and audio files:\")\n",
    "display(download_button)"
   ]
  }
