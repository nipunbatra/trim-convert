   },
   "source": [
    "## ğŸ”§ Setup and Mount Google Drive"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {
    "id": "setup_cell"
   },
   "outputs": [],
   "source": [
    "# Mount Google Drive and install dependencies\n",
    "from google.colab import drive, files\n",
    "import os\n",
    "import subprocess\n",
    "import ipywidgets as widgets\n",
    "from IPython.display import display, HTML, Video, Audio, clear_output\n",
    "import json\n",
    "import tempfile\n",
    "from pathlib import Path\n",
    "import glob\n",
    "\n",
    "# Mount Google Drive\n",
    "print(\"ğŸ”— Mounting Google Drive...\")\n",
    "drive.mount('/content/drive')\n",
    "\n",
    "# Check if ffmpeg is available\n",
    "try:\n",
    "    result = subprocess.run(['ffmpeg', '-version'], capture_output=True, text=True)\n",
    "    if result.returncode == 0:\n",
    "        print(\"âœ… ffmpeg is available and ready\")\n",
    "    else:\n",
    "        print(\"âŒ ffmpeg check failed\")\n",
    "except FileNotFoundError:\n",
    "    print(\"âŒ ffmpeg not found - installing...\")\n",
    "    !apt update -qq && apt install -y ffmpeg\n",
    "    print(\"âœ… ffmpeg installed\")\n",
    "\n",
    "print(\"\\nğŸš€ Setup complete! You can now use the video trimmer.\")"
   ]
  },
  {
   "cell_type": "markdown",
   "metadata": {
    "id": "file_selection"
   },
   "source": [
    "## ğŸ“ Fast File Selection"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {
    "id": "file_selection_cell"
   },
   "outputs": [],
   "source": [
    "# Manual file path entry (much faster than searching)\n",
    "print(\"ğŸ“ Fast File Selection\")\n",
    "print(\"ğŸ’¡ Tip: In Google Drive, right-click your video â†’ 'Get link' â†’ copy the file ID\")\n",
    "print(\"ğŸ“‚ Or type the full path: /content/drive/MyDrive/[your-folder]/[your-file.mp4]\")\n",
    "\n",
    "# Input file selection\n",
    "input_file = widgets.Text(\n",
    "    value='',\n",
    "    placeholder='/content/drive/MyDrive/your-video.mp4',\n",
    "    description='ğŸ“¹ Video Path:',\n",
    "    style={'description_width': 'initial'},\n",
    "    layout=widgets.Layout(width='700px')\n",
    ")\n",
    "\n",
    "# Output folder selection\n",
    "output_folder = widgets.Text(\n",
    "    value='/content/drive/MyDrive/Video_Trimmed',\n",
    "    description='ğŸ“ Output Folder:',\n",
    "    style={'description_width': 'initial'},\n",
    "    layout=widgets.Layout(width='700px')\n",
    ")\n",
    "\n",
    "# File validation and info\n",
    "file_status = widgets.HTML(\n",
    "    value=\"<i>Enter a video file path above</i>\"\n",
    ")\n",
    "\n",
    "def validate_file(change):\n",
    "    file_path = change['new']\n",
    "    if not file_path:\n",
    "        file_status.value = \"<i>Enter a video file path above</i>\"\n",
    "        return\n",
    "    \n",
    "    if os.path.exists(file_path):\n",
    "        file_size = os.path.getsize(file_path) / (1024 * 1024)  # MB\n",
    "        file_status.value = f\"<span style='color: green; font-weight: bold;'>âœ… Valid: {os.path.basename(file_path)} ({file_size:.1f} MB)</span>\"\n",
    "    else:\n",
    "        file_status.value = f\"<span style='color: red; font-weight: bold;'>âŒ File not found: {file_path}</span>\"\n",
    "\n",
    "input_file.observe(validate_file, names='value')\n",
    "\n",
    "# Quick browse helper\n",
    "def show_drive_contents():\n",
    "    \"\"\"Show Drive contents to help find files\"\"\"\n",
    "    drive_root = '/content/drive/MyDrive'\n",
    "    if os.path.exists(drive_root):\n",
    "        print(\"ğŸ“‚ Your Drive contents:\")\n",
    "        items = os.listdir(drive_root)\n",
    "        for item in sorted(items)[:15]:  # Show first 15 items\n",
    "            item_path = os.path.join(drive_root, item)\n",
    "            if os.path.isdir(item_path):\n",
    "                print(f\"  ğŸ“ {item}/\")\n",
    "            elif item.lower().endswith(('.mp4', '.mov', '.avi', '.mkv')):\n",
    "                size = os.path.getsize(item_path) / (1024 * 1024)\n",
    "                print(f\"  ğŸ¬ {item} ({size:.1f} MB)\")\n",
    "        print(\"\\nğŸ’¡ Copy the full path and paste it above!\")\n",
    "        print(f\"ğŸ’¡ Example: {drive_root}/YourFolder/your-video.mp4\")\n",
    "    else:\n",
    "        print(\"âŒ Drive not mounted. Please run the setup cell first.\")\n",
    "\n",
    "browse_button = widgets.Button(\n",
    "    description=\"ğŸ“‚ Browse Drive\",\n",
    "    button_style='info',\n",
    "    layout=widgets.Layout(width='150px')\n",
    ")\n",
    "\n",
    "browse_button.on_click(lambda b: show_drive_contents())\n",
    "\n",
    "# Display file selection interface\n",
    "display(input_file, file_status, output_folder, browse_button)\n",
    "\n",
    "# Global variables for other cells\n",
    "current_video_path = None\n",
    "current_output_folder = None"
   ]
  },
  {
   "cell_type": "markdown",
   "metadata": {
    "id": "integrated_player"
   },
   "source": [
    "## ğŸ¥ Integrated Video Player & Trim Controls"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {
    "id": "integrated_player_cell"
   },
   "outputs": [],
   "source": [
    "# Integrated video player with trim controls\n",
    "def get_video_duration(video_path):\n",
    "    \"\"\"Get video duration using ffprobe\"\"\"\n",
    "    try:\n",
    "        cmd = [\n",
    "            'ffprobe', '-v', 'quiet', '-print_format', 'json',\n",
    "            '-show_format', '-show_streams', video_path\n",
    "        ]\n",
    "        result = subprocess.run(cmd, capture_output=True, text=True)\n",
    "        \n",
    "        if result.returncode == 0:\n",
    "            data = json.loads(result.stdout)\n",
    "            duration = float(data['format']['duration'])\n",
    "            return duration\n",
    "        return 0\n",
    "    except Exception as e:\n",
    "        print(f\"âŒ Error getting duration: {e}\")\n",
    "        return 0\n",
    "\n",
    "def format_time(seconds):\n",
    "    \"\"\"Format seconds to MM:SS\"\"\"\n",
    "    if seconds is None or seconds == 0:\n",
    "        return \"00:00\"\n",
    "    minutes = int(seconds // 60)\n",
    "    secs = int(seconds % 60)\n",
    "    return f\"{minutes:02d}:{secs:02d}\"\n",
    "\n",
    "def create_integrated_player():\n",
    "    \"\"\"Create integrated video player with trim controls\"\"\"\n",
    "    global current_video_path, current_output_folder\n",
    "    \n",
    "    video_path = input_file.value\n",
    "    if not video_path or not os.path.exists(video_path):\n",
    "        print(\"âŒ Please enter a valid video file path first!\")\n",
    "        return\n",
    "    \n",
    "    current_video_path = video_path\n",
    "    current_output_folder = output_folder.value\n",
    "    \n",
    "    # Get video duration\n",
    "    duration = get_video_duration(video_path)\n",
    "    if duration == 0:\n",
    "        print(\"âŒ Could not determine video duration\")\n",
    "        return\n",
    "    \n",
    "    # Display video info\n",
    "    file_size = os.path.getsize(video_path) / (1024 * 1024)\n",
    "    print(f\"ğŸ¬ Video: {os.path.basename(video_path)} ({file_size:.1f} MB)\")\n",
    "    print(f\"â±ï¸ Duration: {format_time(duration)} ({duration:.1f} seconds)\")\n",
    "    \n",
    "    # Create video player\n",
    "    print(\"\\nğŸ¥ Video Player:\")\n",
    "    display(Video(video_path, width=700, height=400))\n",
    "    \n",
    "    # Create trim controls\n",
    "    print(\"\\nâœ‚ï¸ Trim Controls:\")\n",
    "    \n",
    "    # Time sliders\n",
    "    start_slider = widgets.FloatSlider(\n",
    "        value=0,\n",
    "        min=0,\n",
    "        max=duration,\n",
    "        step=0.1,\n",
    "        description='â¯ï¸ Start:',\n",
    "        style={'description_width': 'initial'},\n",
    "        layout=widgets.Layout(width='600px')\n",
    "    )\n",
    "    \n",
    "    end_slider = widgets.FloatSlider(\n",
    "        value=duration,\n",
    "        min=0,\n",
    "        max=duration,\n",
    "        step=0.1,\n",
    "        description='â¹ï¸ End:',\n",
    "        style={'description_width': 'initial'},\n",
    "        layout=widgets.Layout(width='600px')\n",
    "    )\n",
    "    \n",
    "    # Time display\n",
    "    time_display = widgets.HTML(\n",
    "        value=f\"<div style='font-size: 16px; padding: 10px; background: #f0f0f0; border-radius: 5px;'><b>â¯ï¸ Start:</b> 00:00 &nbsp;&nbsp; <b>â¹ï¸ End:</b> {format_time(duration)} &nbsp;&nbsp; <b>â±ï¸ Duration:</b> {format_time(duration)}</div>\"\n",
    "    )\n",
    "    \n",
    "    # Update time display\n",
    "    def update_time_display(change=None):\n",
    "        start_val = start_slider.value\n",
    "        end_val = end_slider.value\n",
    "        trim_duration = end_val - start_val\n",
    "        time_display.value = f\"<div style='font-size: 16px; padding: 10px; background: #f0f0f0; border-radius: 5px;'><b>â¯ï¸ Start:</b> {format_time(start_val)} &nbsp;&nbsp; <b>â¹ï¸ End:</b> {format_time(end_val)} &nbsp;&nbsp; <b>â±ï¸ Trim Duration:</b> {format_time(trim_duration)}</div>\"\n",
    "    \n",
    "    start_slider.observe(update_time_display, names='value')\n",
    "    end_slider.observe(update_time_display, names='value')\n",
    "    \n",
    "    # Preset buttons\n",
    "    def set_first_30s(b):\n",
    "        start_slider.value = 0\n",
    "        end_slider.value = min(30, duration)\n",
    "    \n",
    "    def set_last_30s(b):\n",
    "        start_slider.value = max(0, duration - 30)\n",
    "        end_slider.value = duration\n",
    "    \n",
    "    def set_middle_30s(b):\n",
    "        middle = duration / 2\n",
    "        start_slider.value = max(0, middle - 15)\n",
    "        end_slider.value = min(duration, middle + 15)\n",
    "    \n",
    "    def set_first_60s(b):\n",
    "        start_slider.value = 0\n",
    "        end_slider.value = min(60, duration)\n",
    "    \n",
    "    btn_first_30 = widgets.Button(description=\"ğŸ“ First 30s\", button_style='info')\n",
    "    btn_middle_30 = widgets.Button(description=\"ğŸ“ Middle 30s\", button_style='info')\n",
    "    btn_last_30 = widgets.Button(description=\"ğŸ“ Last 30s\", button_style='info')\n",
    "    btn_first_60 = widgets.Button(description=\"ğŸ“ First 60s\", button_style='success')\n",
    "    \n",
    "    btn_first_30.on_click(set_first_30s)\n",
    "    btn_middle_30.on_click(set_middle_30s)\n",
    "    btn_last_30.on_click(set_last_30s)\n",
    "    btn_first_60.on_click(set_first_60s)\n",
    "    \n",
    "    preset_buttons = widgets.HBox([btn_first_30, btn_middle_30, btn_last_30, btn_first_60])\n",
    "    \n",
    "    # Process function\n",
    "    def process_video_trim():\n",
    "        \"\"\"Process video trimming with ffmpeg\"\"\"\n",
    "        start_time = start_slider.value\n",
    "        end_time = end_slider.value\n",
    "        \n",
    "        # Validation\n",
    "        if start_time >= end_time:\n",
    "            print(\"âŒ Start time must be less than end time\")\n",
    "            return\n",
    "        \n",
    "        # Create output directory\n",
    "        output_dir = current_output_folder\n",
    "        os.makedirs(output_dir, exist_ok=True)\n",
    "        \n",
    "        # Generate output filenames\n",
    "        base_name = Path(current_video_path).stem\n",
    "        output_video = os.path.join(output_dir, f\"{base_name}_trimmed.mp4\")\n",
    "        output_audio = os.path.join(output_dir, f\"{base_name}_trimmed.aac\")\n",
    "        \n",
    "        print(f\"\\nğŸ¬ Processing: {os.path.basename(current_video_path)}\")\n",
    "        print(f\"â° Trimming: {format_time(start_time)} â†’ {format_time(end_time)} ({end_time - start_time:.1f}s)\")\n",
    "        print(f\"ğŸ“ Output: {output_dir}\")\n",
    "        \n",
    "        # Convert seconds to HH:MM:SS format\n",
    "        def seconds_to_hms(seconds):\n",
    "            hours = int(seconds // 3600)\n",
    "            minutes = int((seconds % 3600) // 60)\n",
    "            secs = seconds % 60\n",
    "            return f\"{hours:02d}:{minutes:02d}:{secs:06.3f}\"\n",
    "        \n",
    "        start_hms = seconds_to_hms(start_time)\n",
    "        duration_hms = seconds_to_hms(end_time - start_time)\n",
    "        \n",
    "        # Process video\n",
    "        print(\"\\nğŸ¥ Trimming video...\")\n",
    "        video_cmd = [\n",
    "            'ffmpeg', '-y',\n",
    "            '-ss', start_hms,\n",
    "            '-i', current_video_path,\n",
    "            '-t', duration_hms,\n",
    "            '-c:v', 'libx264', '-preset', 'fast', '-crf', '18',\n",
    "            '-c:a', 'aac', '-b:a', '128k',\n",
    "            output_video\n",
    "        ]\n",
    "        \n",
    "        result = subprocess.run(video_cmd, capture_output=True, text=True)\n",
    "        \n",
    "        if result.returncode == 0:\n",
    "            print(\"âœ… Video trimmed successfully\")\n",
    "        else:\n",
    "            print(f\"âŒ Video processing failed: {result.stderr}\")\n",
    "            return\n",
    "        \n",
    "        # Extract audio\n",
    "        print(\"ğŸµ Extracting audio...\")\n",
    "        audio_cmd = [\n",
    "            'ffmpeg', '-y',\n",
    "            '-ss', start_hms,\n",
    "            '-i', current_video_path,\n",
    "            '-t', duration_hms,\n",
    "            '-vn', '-acodec', 'aac', '-b:a', '128k',\n",
    "            output_audio\n",
    "        ]\n",
    "        \n",
    "        result = subprocess.run(audio_cmd, capture_output=True, text=True)\n",
    "        \n",
    "        if result.returncode == 0:\n",
    "            print(\"âœ… Audio extracted successfully\")\n",
    "        else:\n",
    "            print(f\"âŒ Audio extraction failed: {result.stderr}\")\n",
    "            return\n",
    "        \n",
    "        # Show results\n",
    "        print(\"\\nğŸ‰ Processing complete!\")\n",
    "        \n",
    "        # File sizes\n",
    "        if os.path.exists(output_video):\n",
    "            video_size = os.path.getsize(output_video) / (1024 * 1024)\n",
    "            print(f\"ğŸ“¹ Video: {os.path.basename(output_video)} ({video_size:.1f} MB)\")\n",
    "        \n",
    "        if os.path.exists(output_audio):\n",
    "            audio_size = os.path.getsize(output_audio) / (1024 * 1024)\n",
    "            print(f\"ğŸµ Audio: {os.path.basename(output_audio)} ({audio_size:.1f} MB)\")\n",
    "        \n",
    "        # Display results\n",
    "        print(\"\\nğŸ¬ Trimmed Video:\")\n",
    "        display(Video(output_video, width=600, height=350))\n",
    "        \n",
    "        print(\"\\nğŸµ Extracted Audio:\")\n",
    "        display(Audio(output_audio))\n",
    "        \n",
    "        return output_video, output_audio\n",
    "    \n",
    "    # Process button\n",
    "    process_button = widgets.Button(\n",
    "        description=\"âœ‚ï¸ TRIM VIDEO\",\n",
    "        button_style='success',\n",
    "        layout=widgets.Layout(width='200px', height='50px')\n",
    "    )\n",
    "    \n",
    "    process_output = widgets.Output()\n",
    "    \n",
    "    def on_process_click(b):\n",
    "        with process_output:\n",
    "            clear_output()\n",
    "            process_video_trim()\n",
    "    \n",
    "    process_button.on_click(on_process_click)\n",
    "    \n",
    "    # Display all controls\n",
    "    display(start_slider, end_slider, time_display)\n",
    "    print(\"\\nğŸš€ Quick Presets:\")\n",
    "    display(preset_buttons)\n",
    "    print(\"\\nğŸ¬ Ready to trim!\")\n",
    "    display(process_button, process_output)\n",
    "    \n",
    "    # Store references for download function\n",
    "    globals()['start_slider'] = start_slider\n",
    "    globals()['end_slider'] = end_slider\n",
    "\n",
    "# Load button\n",
    "load_button = widgets.Button(\n",
    "    description=\"ğŸ¥ Load Video Player\",\n",
    "    button_style='primary',\n",
    "    layout=widgets.Layout(width='200px', height='40px')\n",
    ")\n",
    "\n",
    "load_button.on_click(lambda b: create_integrated_player())\n",
    "\n",
    "print(\"ğŸ¬ Click below to load your video with integrated trim controls:\")\n",
    "display(load_button)"
   ]
  },
